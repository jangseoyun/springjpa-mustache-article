{{>layouts/header}}
<div id="wrap">
    {{#article}}
    <div class="card text-bg-warning mb-3" style="width: 70rem;">
        <div class="card-body" style="text-align: center">
            <h5 class="card-title">{{title}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{id}}번 게시물이 등록되었습니다 :-) </h6>
            <p class="card-text">{{contents}}</p>
            <a href="/articles/new" class="card-link">new article</a>
            <a href="/articles/list" class="card-link">list article</a>
        </div>
    </div>
    {{/article}}

    <!--댓글 작성-->
    <div class="input-group mb-3">
        <form>
        <input type="text" class="form-control" placeholder="Please write a comment" aria-label="Recipient's username" aria-describedby="button-addon2" name="comment" value="">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="location.href='/articles/{{id}}/comment'">등록</button>
        </form>
    </div>

    {{#}}
    <!--댓글 리스트-->
    <ul class="list-group list-group-flush">
        <li class="list-group-item">An item</li>
        <li class="list-group-item">A second item</li>
        <li class="list-group-item">A third item</li>
        <li class="list-group-item">A fourth item</li>
        <li class="list-group-item">And a fifth one</li>
    </ul>
    {{/}}
</div>
{{>layouts/footer}}